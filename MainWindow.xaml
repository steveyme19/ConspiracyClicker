                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Evidence/sec (base  mult = total)" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="EpsBreakdownDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Play Time" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="PlayTimeDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="14"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Achievements" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="AchievementCountDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="14"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Conspiracies Proven" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="ConspiracyCountDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="14"
                                   Margin="0,0,0,20"/>

                        <Separator Background="#333" Margin="0,0,0,15"/>

                        <TextBlock Text="GENERATORS OWNED"
                                   FontSize="14" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGold}"
                                   Margin="0,0,0,10"/>
                        <StackPanel x:Name="OwnedGeneratorsPanel"/>

                        <!-- Prestige Teaser -->
                        <Border x:Name="PrestigeTeaser" Visibility="Collapsed"
                                Background="#2a1a4e" BorderBrush="#9933ff" BorderThickness="2"
                                CornerRadius="8" Margin="0,20,0,0" Padding="10">
                            <StackPanel>
                                <TextBlock Text="THE ILLUMINATI AWAITS..." FontSize="14" FontWeight="Bold"
                                           Foreground="#9933ff" HorizontalAlignment="Center"/>
                                <TextBlock Text="Reach 1 trillion evidence to ascend"
                                           FontSize="10" Foreground="{StaticResource TextDim}"
                                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- News Ticker -->
            <Border Grid.Row="1" Grid.ColumnSpan="3" Background="#0a0f1a"
                    Margin="10,0,10,10" Padding="8,4" CornerRadius="4">
                <Grid ClipToBounds="True">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                        <Image Source="{DynamicResource Icon_broadcast}" Width="20" Height="20" Margin="0,0,6,0"/>
                        <TextBlock Text="BREAKING:" FontWeight="Bold" Foreground="{StaticResource AccentGold}"/>
                    </StackPanel>
                    <Canvas x:Name="NewsTickerCanvas" Margin="100,0,0,0" ClipToBounds="True">
                        <TextBlock x:Name="NewsTickerText" Foreground="{StaticResource TextLight}" FontSize="12"
                                   Canvas.Top="2"/>
                    </Canvas>
                </Grid>
            </Border>
        </Grid>

        <!-- Minigame Overlay -->
        <Border x:Name="MinigameOverlay" Visibility="Collapsed" Panel.ZIndex="500"
                Background="#CC1a1a2e">
            <Grid>
                <Border Background="#16213e" BorderBrush="{StaticResource AccentGreen}"
                        BorderThickness="3" CornerRadius="12" Padding="20"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        MinWidth="400" MinHeight="350">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <StackPanel Grid.Row="0">
                            <TextBlock x:Name="MinigameTitle" Text="MINIGAME"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource AccentGreen}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="MinigameInstructions" Text="Click to begin!"
                                       FontSize="12" Foreground="{StaticResource TextDim}"
                                       HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        </StackPanel>

                        <!-- Game Area -->
                        <Border Grid.Row="1" Background="#0f1a2e" CornerRadius="8" Margin="0,10">
                            <Canvas x:Name="MinigameCanvas" Width="350" Height="200"
                                    ClipToBounds="True"/>
                        </Border>

                        <!-- Status/Timer -->
                        <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                            <TextBlock x:Name="MinigameStatus" Text="Ready!"
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="{StaticResource AccentGold}"
                                       HorizontalAlignment="Center"/>
                            <Button x:Name="MinigameStartButton" Content="START GAME"
                                    Click="MinigameStart_Click" Margin="0,10,0,0"
                                    ToolTip="Begin the minigame"
                                    Padding="20,8" Background="{StaticResource AccentGreen}"
                                    Foreground="#1a1a2e" FontWeight="Bold" Cursor="Hand"/>
                            <Button x:Name="MinigameCloseButton" Content="Close"
                                    Click="MinigameClose_Click" Margin="0,5,0,0"
                                    ToolTip="Close this window"
                                    Padding="15,5" Background="Transparent"
                                    Foreground="{StaticResource TextDim}" Cursor="Hand"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Ascend Confirmation Overlay -->
        <Border x:Name="AscendOverlay" Visibility="Collapsed" Panel.ZIndex="600"
                Background="#DD1a1a2e">
            <Grid>
                <Border Background="#16213e" BorderBrush="#9933ff"
                        BorderThickness="3" CornerRadius="12" Padding="30"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        MinWidth="450">
                    <Border.Effect>
                        <DropShadowEffect Color="#9933ff" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Title -->
                        <TextBlock Text="JOIN THE ILLUMINATI?" FontSize="26" FontWeight="Bold"
                                   Foreground="#9933ff" HorizontalAlignment="Center"/>
                        <TextBlock Text="Are you ready to ascend?" FontSize="14"
                                   Foreground="{StaticResource TextDim}"
                                   HorizontalAlignment="Center" Margin="0,5,0,20"/>

                        <!-- Token Reward -->
                        <Border Background="#0f1a2e" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="You will receive:" FontSize="12"
                                           Foreground="{StaticResource TextDim}" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="AscendTokensText" Text="0 Illuminati Tokens"
                                           FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource AccentGold}"
                                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- What you lose -->
                        <Border Background="#2a1a1a" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="YOU WILL LOSE:" FontSize="12" FontWeight="Bold"
                                           Foreground="#ff6666" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text=" All Evidence" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text=" All Generators" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text=" All Upgrades" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text=" All Tinfoil &amp; Tinfoil Upgrades" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text=" All Believers" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text=" All Conspiracies" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- What you keep -->
                        <Border Background="#1a2a1a" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="YOU WILL KEEP:" FontSize="12" FontWeight="Bold"
                                           Foreground="#66ff66" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text=" Illuminati Tokens &amp; Upgrades" Foreground="#99ff99" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text=" Skill Tree Progress" Foreground="#99ff99" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text=" Achievements" Foreground="#99ff99" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="ASCEND" Click="AscendConfirm_Click"
                                    ToolTip="Confirm prestige and earn tokens"
                                    Padding="20,12" Background="#9933ff" Foreground="White"
                                    FontWeight="Bold" FontSize="14" Cursor="Hand"/>
                            <Button Grid.Column="2" Content="Cancel" Click="AscendCancel_Click"
                                    ToolTip="Return to game without ascending"
                                    Padding="20,12" Background="#333344" Foreground="{StaticResource TextDim}"
                                    FontWeight="Bold" FontSize="14" Cursor="Hand"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Tutorial Overlay (shown for new players) -->
        <Border x:Name="TutorialOverlay" Visibility="Collapsed" Panel.ZIndex="650"
                Background="#EE0a0a15">
            <Grid>
                <Border Background="#16213e" BorderBrush="{StaticResource AccentGreen}"
                        BorderThickness="3" CornerRadius="12" Padding="30"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        MaxWidth="600">
                    <Border.Effect>
                        <DropShadowEffect Color="#00ff41" BlurRadius="30" ShadowDepth="0" Opacity="0.4"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Title -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                            <Image Source="{DynamicResource Icon_all_seeing_eye_small}" Width="32" Height="32" Margin="0,0,10,0"/>
                            <TextBlock Text="WELCOME, TRUTH SEEKER" FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource AccentGreen}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="Your journey into the conspiracy begins here..."
                                   FontSize="12" Foreground="{StaticResource TextDim}"
                                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

                        <!-- Step 1: Click -->
                        <Border Background="#0f1a2e" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="1" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentGreen}"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="CLICK THE EYE" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentGold}"/>
                                    <TextBlock Text="Click the Illuminati eye to gather Evidence. Build up combos for bonus power!"
                                               FontSize="11" Foreground="{StaticResource TextLight}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Step 2: Generators -->
                        <Border Background="#0f1a2e" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="2" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentGreen}"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="BUY GENERATORS" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentGold}"/>
                                    <TextBlock Text="Generators produce Evidence automatically. Each type is more powerful than the last!"
                                               FontSize="11" Foreground="{StaticResource TextLight}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Step 3: Conspiracies -->
                        <Border Background="#0f1a2e" CornerRadius="8" Padding="12" Margin="0,0,0,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="3" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentGreen}"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="PROVE CONSPIRACIES" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentGold}"/>
                                    <TextBlock Text="Use your Evidence to prove conspiracies. Each one grants powerful bonuses!"
                                               FontSize="11" Foreground="{StaticResource TextLight}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Step 4: Prestige (most important!) -->
                        <Border Background="#1a1a2e" CornerRadius="8" Padding="12" Margin="0,0,0,15"
                                BorderBrush="#9933ff" BorderThickness="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="40"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="4" FontSize="24" FontWeight="Bold" Foreground="#9933ff"
                                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="ASCEND (PRESTIGE)" FontSize="14" FontWeight="Bold" Foreground="#9933ff"/>
                                    <TextBlock Text="When you reach 50K total Evidence, you can ASCEND to join the Illuminati!"
                                               FontSize="11" Foreground="{StaticResource TextLight}" TextWrapping="Wrap"/>
                                    <TextBlock Text="Ascending resets your progress but grants Illuminati Tokens that give MASSIVE permanent multipliers (100x-500x EPS). This is ESSENTIAL for reaching the late game!"
                                               FontSize="11" Foreground="{StaticResource AccentGold}" TextWrapping="Wrap" Margin="0,5,0,0" FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Close Button -->
                        <Button x:Name="TutorialCloseBtn" Click="TutorialClose_Click"
                                Content="BEGIN YOUR INVESTIGATION" Height="40"
                                Background="{StaticResource AccentGreen}" Foreground="#0a0a15"
                                FontWeight="Bold" FontSize="14" Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Menu Overlay (shown on startup) -->
        <Border x:Name="MainMenuOverlay" Visibility="Visible" Panel.ZIndex="700"
                Background="#FF0a0a15">
            <Grid>
                <!-- Animated background canvas -->
                <Canvas x:Name="MenuBackgroundCanvas" ClipToBounds="True" IsHitTestVisible="False"/>

                <!-- Animated large pyramid in background -->
                <Image x:Name="MenuPyramidBg" Source="{DynamicResource Icon_pyramid_level_5}"
                       Width="500" Height="500" Opacity="0.08" Stretch="Uniform"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       RenderTransformOrigin="0.5,0.5" IsHitTestVisible="False">
                    <Image.RenderTransform>
                        <RotateTransform x:Name="MenuPyramidRotation" Angle="0"/>
                    </Image.RenderTransform>
                </Image>

                <!-- Radial glow behind menu -->
                <Ellipse Width="800" Height="800" Opacity="0.15" IsHitTestVisible="False"
                         HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse.Fill>
                        <RadialGradientBrush>
                            <GradientStop Color="#00ff41" Offset="0"/>
                            <GradientStop Color="Transparent" Offset="0.7"/>
                        </RadialGradientBrush>
                    </Ellipse.Fill>
                </Ellipse>

                <Border Background="#16213e" BorderBrush="#00ff41"
                        BorderThickness="3" CornerRadius="15" Padding="40"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        MinWidth="550">
                    <Border.Effect>
                        <DropShadowEffect Color="#00ff41" BlurRadius="40" ShadowDepth="0" Opacity="0.4"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Title -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="{DynamicResource Icon_all_seeing_eye_small}" Width="48" Height="48" Margin="0,0,12,0"/>
                            <TextBlock Text="CONSPIRACY CLICKER" FontSize="48" FontWeight="Bold"
                                       Foreground="{StaticResource AccentGreen}" VerticalAlignment="Center"/>
                            <Image Source="{DynamicResource Icon_all_seeing_eye_small}" Width="48" Height="48" Margin="12,0,0,0"/>
                        </StackPanel>
                        <TextBlock Text="The Truth Is Out There" FontSize="21" FontStyle="Italic"
                                   Foreground="{StaticResource TextDim}"
                                   HorizontalAlignment="Center" Margin="0,5,0,30"/>

                        <!-- Save Slots -->
                        <TextBlock Text="SELECT SAVE SLOT" FontSize="21" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGold}" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                        <!-- Slot 1 -->
                        <Border x:Name="SaveSlot1Border" Background="#0f1a2e" CornerRadius="8"
                                Padding="15" Margin="0,0,0,10" Cursor="Hand"
                                BorderBrush="#333366" BorderThickness="2"
                                MouseDown="SaveSlot_Click" Tag="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="SLOT 1" FontSize="21" FontWeight="Bold"
                                           Foreground="{StaticResource AccentGreen}" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="20,0">
                                    <TextBlock x:Name="Slot1Info" Text="- Empty Slot -"
                                               Foreground="{StaticResource TextDim}" FontSize="18"/>
                                    <TextBlock x:Name="Slot1Details" Text=""
                                               Foreground="{StaticResource TextDim}" FontSize="15" Margin="0,3,0,0"/>
                                </StackPanel>
                                <Button x:Name="Slot1DeleteBtn" Grid.Column="2"
                                        Click="DeleteSlot_Click" Tag="1"
                                        ToolTip="Delete this save"
                                        Visibility="Collapsed" Width="45" Height="45"
                                        Background="#442222" BorderBrush="#883333">
                                    <Image Source="{DynamicResource Icon_trash}" Width="24" Height="24"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Slot 2 -->
                        <Border x:Name="SaveSlot2Border" Background="#0f1a2e" CornerRadius="8"
                                Padding="15" Margin="0,0,0,10" Cursor="Hand"
                                BorderBrush="#333366" BorderThickness="2"
                                MouseDown="SaveSlot_Click" Tag="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="SLOT 2" FontSize="21" FontWeight="Bold"
                                           Foreground="{StaticResource AccentGreen}" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="20,0">
                                    <TextBlock x:Name="Slot2Info" Text="- Empty Slot -"
                                               Foreground="{StaticResource TextDim}" FontSize="18"/>
                                    <TextBlock x:Name="Slot2Details" Text=""
                                               Foreground="{StaticResource TextDim}" FontSize="15" Margin="0,3,0,0"/>
                                </StackPanel>
                                <Button x:Name="Slot2DeleteBtn" Grid.Column="2"
                                        Click="DeleteSlot_Click" Tag="2"
                                        ToolTip="Delete this save"
                                        Visibility="Collapsed" Width="45" Height="45"
                                        Background="#442222" BorderBrush="#883333">
                                    <Image Source="{DynamicResource Icon_trash}" Width="24" Height="24"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Slot 3 -->
                        <Border x:Name="SaveSlot3Border" Background="#0f1a2e" CornerRadius="8"
                                Padding="15" Margin="0,0,0,20" Cursor="Hand"
                                BorderBrush="#333366" BorderThickness="2"
                                MouseDown="SaveSlot_Click" Tag="3">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="SLOT 3" FontSize="21" FontWeight="Bold"
                                           Foreground="{StaticResource AccentGreen}" VerticalAlignment="Center"/>
                                <StackPanel Grid.Column="1" Margin="20,0">
                                    <TextBlock x:Name="Slot3Info" Text="- Empty Slot -"
                                               Foreground="{StaticResource TextDim}" FontSize="18"/>
                                    <TextBlock x:Name="Slot3Details" Text=""
                                               Foreground="{StaticResource TextDim}" FontSize="15" Margin="0,3,0,0"/>
                                </StackPanel>
                                <Button x:Name="Slot3DeleteBtn" Grid.Column="2"
                                        Click="DeleteSlot_Click" Tag="3"
                                        ToolTip="Delete this save"
                                        Visibility="Collapsed" Width="45" Height="45"
                                        Background="#442222" BorderBrush="#883333">
                                    <Image Source="{DynamicResource Icon_trash}" Width="24" Height="24"/>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Selected Slot Info -->
                        <Border x:Name="SelectedSlotPanel" Background="#1a2a1a" CornerRadius="8"
                                Padding="15" Margin="0,0,0,20" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock x:Name="SelectedSlotTitle" Text="SLOT 1 SELECTED" FontSize="21"
                                           FontWeight="Bold" Foreground="{StaticResource AccentGold}"
                                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                                <!-- Challenge Mode Selection (only for new games) -->
                                <StackPanel x:Name="ChallengeSelectionPanel" Visibility="Collapsed" Margin="0,0,0,15">
                                    <TextBlock Text="CHALLENGE MODE" FontSize="18" FontWeight="Bold"
                                               Foreground="{StaticResource TextLight}" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                    <ComboBox x:Name="ChallengeModeCombo" SelectionChanged="ChallengeModeCombo_SelectionChanged"
                                              Style="{StaticResource DarkComboBox}"
                                              ItemContainerStyle="{StaticResource DarkComboBoxItem}"
                                              HorizontalAlignment="Stretch">
                                        <ComboBoxItem Tag="" IsSelected="True">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="" FontFamily="Segoe UI Emoji" FontSize="20" Margin="0,0,8,0"/>
                                                <TextBlock Text="Normal Mode" VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </ComboBoxItem>
                                    </ComboBox>
                                    <TextBlock x:Name="ChallengeDescriptionText" Text="" FontSize="17"
                                               Foreground="{StaticResource TextDim}" TextWrapping="Wrap"
                                               Margin="0,8,0,0" HorizontalAlignment="Center"/>
                                </StackPanel>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="ContinueBtn" Grid.Column="0" Content="CONTINUE"
                                            Click="MenuContinue_Click"
                                            ToolTip="Continue your saved game"
                                            Padding="20,12" Background="#00aa33" Foreground="White"
                                            FontWeight="Bold" FontSize="21" Cursor="Hand"/>
                                    <Button x:Name="NewGameBtn" Grid.Column="2" Content="NEW GAME"
                                            Click="MenuNewGame_Click"
                                            ToolTip="Start a fresh game in this slot"
                                            Padding="20,12" Background="#336699" Foreground="White"
                                            FontWeight="Bold" FontSize="21" Cursor="Hand"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Quick Continue (if save exists) -->
                        <Button x:Name="QuickContinueBtn" Content=" QUICK CONTINUE"
                                Click="MenuQuickContinue_Click" Visibility="Collapsed"
                                ToolTip="Jump back into your most recent save"
                                Padding="25,15" Background="#00aa33" Foreground="White"
                                FontWeight="Bold" FontSize="21" Cursor="Hand" Margin="0,0,0,10"/>

                        <!-- Quit Button -->
                        <Button Content="QUIT" Click="MenuQuit_Click"
                                ToolTip="Exit the game"
                                Padding="25,15" Background="#442222" Foreground="#ff9999"
                                FontWeight="Bold" FontSize="18" Cursor="Hand"/>

                        <!-- Version -->
                        <TextBlock x:Name="VersionText" Text="v1.0.0 - Click responsibly" FontSize="15"
                                   Foreground="{StaticResource TextDim}"
                                   HorizontalAlignment="Center" Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Toast Notification Overlay -->
        <Border x:Name="ToastNotification"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,20,0,0" Padding="25,12"
                Background="#0f3460" BorderBrush="{StaticResource AccentGold}"
                BorderThickness="2" CornerRadius="8"
                Visibility="Collapsed" Panel.ZIndex="1000"
                IsHitTestVisible="False">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="ToastIcon" Text="!" FontSize="27" FontWeight="Bold"
                           Foreground="{StaticResource AccentGold}" Margin="0,0,10,0"/>
                <TextBlock x:Name="ToastMessage" Text="" FontSize="21"
                           Foreground="{StaticResource TextLight}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
