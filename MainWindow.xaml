<Window x:Class="ConspiracyClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conspiracy Clicker - The Truth Is Out There"
        Height="700" Width="1100"
        MinHeight="600" MinWidth="900"
        Background="#1a1a2e"
        Icon="app.ico"
        Closing="Window_Closing">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundDark" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#16213e"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#00ff41"/>
        <SolidColorBrush x:Key="AccentGold" Color="#ffd700"/>
        <SolidColorBrush x:Key="TextLight" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="TextDim" Color="#888888"/>

        <!-- Base button style to prevent white highlight -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#00ff41"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1a5a7e"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#33ff66"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0a3a4e"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#2a2a3e"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#444444"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GeneratorButton" TargetType="Button">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#00ff41"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1a4a6e"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#2a2a3e"/>
                    <Setter Property="BorderBrush" Value="#444444"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Layout -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="240"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Click Area -->
            <Border Grid.Column="0" Background="{StaticResource PanelBackground}"
                    Margin="10" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="15,15,15,5">
                        <TextBlock x:Name="EvidenceDisplay"
                                   FontSize="26" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGreen}"
                                   Text="0 Evidence">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#00ff41" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="EpsDisplay"
                                   FontSize="13"
                                   Foreground="{StaticResource TextDim}"
                                   Text="0/sec"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="15,0,15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Tinfoil" FontSize="10" Foreground="{StaticResource TextDim}"/>
                            <TextBlock x:Name="TinfoilDisplay" FontSize="14" FontWeight="Bold"
                                       Foreground="#C0C0C0" Text="0"/>
                        </StackPanel>
                        <StackPanel x:Name="TokensPanel" Grid.Column="1" Visibility="Collapsed">
                            <TextBlock Text="Tokens" FontSize="10" Foreground="{StaticResource TextDim}"/>
                            <TextBlock x:Name="IlluminatiTokenDisplay" FontSize="14" FontWeight="Bold"
                                       Foreground="#9933ff" Text="0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Believers" FontSize="10" Foreground="{StaticResource TextDim}"/>
                            <TextBlock x:Name="BelieversDisplay" FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource AccentGold}" Text="0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Available" FontSize="10" Foreground="{StaticResource TextDim}"/>
                            <TextBlock x:Name="AvailableBelieversDisplay" FontSize="14" FontWeight="Bold"
                                       Foreground="{StaticResource AccentGold}" Text="0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Sound Toggle -->
                    <Button x:Name="SoundToggleButton" Click="SoundToggle_Click"
                            HorizontalAlignment="Right" Margin="15,0,15,5"
                            Background="Transparent" BorderThickness="0" Cursor="Hand"
                            ToolTip="Toggle Sound">
                        <TextBlock x:Name="SoundToggleIcon" Text="ðŸ”Š" FontSize="18"/>
                    </Button>

                    <!-- Click Area -->
                    <Grid Grid.Row="2">
                        <!-- Ambient background canvas (lowest layer) -->
                        <Canvas x:Name="AmbientCanvas" ClipToBounds="False" IsHitTestVisible="False"/>

                        <!-- Orbit canvas for generator icons -->
                        <Canvas x:Name="OrbitCanvas" ClipToBounds="False" IsHitTestVisible="False"
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <!-- The Eye Button -->
                        <Grid x:Name="EyeContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Ellipse x:Name="EyeGlow" Width="220" Height="220"
                                     Fill="Transparent" Opacity="0.3">
                                <Ellipse.Effect>
                                    <BlurEffect Radius="20"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <Ellipse x:Name="EyeOuter" Width="180" Height="180"
                                     Fill="#0f3460" Stroke="{StaticResource AccentGreen}" StrokeThickness="3">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#00ff41" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <Ellipse x:Name="EyeRing1" Width="140" Height="140"
                                     Fill="Transparent" Stroke="#00ff41" StrokeThickness="1" Opacity="0.3"/>
                            <Ellipse x:Name="EyeRing2" Width="100" Height="100"
                                     Fill="Transparent" Stroke="#00ff41" StrokeThickness="1" Opacity="0.2"/>
                            <Ellipse x:Name="EyePupil" Width="60" Height="60"
                                     Fill="{StaticResource AccentGreen}" Opacity="0.4"/>
                            <Button x:Name="ClickButton" Width="180" Height="180"
                                    Click="ClickButton_Click" Cursor="Hand"
                                    Background="Transparent" BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Grid Background="Transparent">
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                                <TextBlock Text="ALL-SEEING"
                                                           FontSize="14" FontWeight="Bold"
                                                           Foreground="{StaticResource AccentGreen}"
                                                           HorizontalAlignment="Center"/>
                                                <TextBlock Text="EYE"
                                                           FontSize="28" FontWeight="Bold"
                                                           Foreground="{StaticResource AccentGreen}"
                                                           HorizontalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- Click Power Label (outside template so it updates) -->
                        <TextBlock x:Name="ClickPowerLabel"
                                   FontSize="11"
                                   Foreground="{StaticResource TextDim}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,75,0,0"
                                   Text="+1/click"/>

                        <!-- Canvas for animations (on top) -->
                        <Canvas x:Name="ClickCanvas" ClipToBounds="False" IsHitTestVisible="False"/>

                        <!-- Canvas for interactive elements (lucky drops, debunkers) -->
                        <Canvas x:Name="InteractiveCanvas" ClipToBounds="False"/>
                    </Grid>

                    <!-- Combo Label -->
                    <StackPanel Grid.Row="3" Margin="15,5,15,5" Panel.ZIndex="100" HorizontalAlignment="Center">
                        <TextBlock x:Name="ComboLabel" Text="" FontSize="12" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGold}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock x:Name="FlavorTextDisplay" Grid.Row="4"
                               Margin="15,5,15,15" TextWrapping="Wrap"
                               FontStyle="Italic" FontSize="11"
                               Foreground="{StaticResource TextDim}"
                               HorizontalAlignment="Center"
                               Text="Click to gather evidence..."/>
                </Grid>
            </Border>

            <!-- Middle Panel: Tabbed Content -->
            <Grid Grid.Column="1" Margin="5,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TabControl Grid.Row="0" Background="Transparent" BorderThickness="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Background" Value="#0f3460"/>
                            <Setter Property="Foreground" Value="#888888"/>
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="Border" Background="#0f3460" CornerRadius="4,4,0,0" Margin="1,0">
                                            <ContentPresenter x:Name="Content" ContentSource="Header"
                                                              Margin="8,4" HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#16213e"/>
                                                <Setter Property="Foreground" Value="#00ff41"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#1a4a6e"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <!-- Generators Tab -->
                    <TabItem x:Name="GeneratorsTab" Header="Generators">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,0">
                                    <TextBlock Text="Buy Mode: " Foreground="{StaticResource TextDim}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <Button x:Name="BuyMode1" Content="1x" Click="BuyMode_Click" Tag="1"
                                            Padding="8,4" Margin="2" Background="#0f3460" Foreground="{StaticResource AccentGreen}"
                                            BorderBrush="{StaticResource AccentGreen}" BorderThickness="1"/>
                                    <Button x:Name="BuyMode10" Content="10x" Click="BuyMode_Click" Tag="10"
                                            Padding="8,4" Margin="2" Background="#0f3460" Foreground="{StaticResource TextDim}"
                                            BorderBrush="{StaticResource TextDim}" BorderThickness="1"/>
                                    <Button x:Name="BuyMode100" Content="100x" Click="BuyMode_Click" Tag="100"
                                            Padding="8,4" Margin="2" Background="#0f3460" Foreground="{StaticResource TextDim}"
                                            BorderBrush="{StaticResource TextDim}" BorderThickness="1"/>
                                    <Button x:Name="BuyModeMax" Content="MAX" Click="BuyMode_Click" Tag="max"
                                            Padding="8,4" Margin="2" Background="#0f3460" Foreground="{StaticResource TextDim}"
                                            BorderBrush="{StaticResource TextDim}" BorderThickness="1"/>
                                </StackPanel>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                                    <StackPanel x:Name="GeneratorPanel"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </TabItem>

                    <!-- Upgrades Tab -->
                    <TabItem x:Name="UpgradesTab" Header="Upgrades">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="AVAILABLE UPGRADES" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGreen}" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="UpgradePanel"/>

                                    <Separator Background="#333" Margin="0,10,0,10"/>

                                    <TextBlock Text="PURCHASED UPGRADES" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGold}" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="PurchasedUpgradesPanel"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </TabItem>

                    <!-- Tinfoil Shop Tab -->
                    <TabItem x:Name="TinfoilShopTab" Header="Tinfoil Shop">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="PURCHASED UPGRADES" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGold}" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="PurchasedTinfoilPanel"/>

                                    <Separator Background="#333" Margin="0,10,0,10"/>

                                    <TextBlock Text="AVAILABLE UPGRADES" FontSize="14" FontWeight="Bold"
                                               Foreground="#C0C0C0" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="TinfoilShopPanel"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </TabItem>

                    <!-- Conspiracies Tab -->
                    <TabItem x:Name="ConspiraciesTab" Header="Conspiracies">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel x:Name="ConspiracyPanel"/>
                            </ScrollViewer>
                        </Border>
                    </TabItem>

                    <!-- Quests Tab -->
                    <TabItem x:Name="QuestsTab" Header="Quests">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="ACTIVE QUESTS" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGold}" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="ActiveQuestsPanel"/>

                                    <Separator Background="#333" Margin="0,10,0,10"/>

                                    <TextBlock Text="AVAILABLE QUESTS" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGreen}" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="AvailableQuestsPanel"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </TabItem>

                    <!-- Achievements Tab -->
                    <TabItem x:Name="AchievementsTab" Header="Achievements">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel x:Name="AchievementPanel"/>
                            </ScrollViewer>
                        </Border>
                    </TabItem>

                    <!-- Skills Tab -->
                    <TabItem x:Name="SkillsTab" Header="Skills">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel>
                                    <!-- Skill Tree Introduction -->
                                    <Border Background="#0a1628" BorderBrush="#333" BorderThickness="1"
                                            CornerRadius="6" Padding="12" Margin="0,0,0,15">
                                        <StackPanel>
                                            <TextBlock Text="HOW SKILLS WORK" FontSize="14" FontWeight="Bold"
                                                       Foreground="{StaticResource AccentGreen}" Margin="0,0,0,8"/>
                                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{StaticResource TextLight}">
                                                <Run FontWeight="Bold" Foreground="{StaticResource AccentGold}">Earn Skill Points from:</Run>
                                            </TextBlock>
                                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{StaticResource TextLight}" Margin="10,2,0,0">
                                                <Run>- 1 SP for every 10 achievements unlocked</Run>
                                            </TextBlock>
                                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{StaticResource TextLight}" Margin="10,2,0,0">
                                                <Run>- 1 SP for each prestige (Illuminati ascension)</Run>
                                            </TextBlock>
                                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{StaticResource TextLight}" Margin="0,5,0,0">
                                                <Run FontWeight="Bold" Foreground="{StaticResource AccentGold}">Spend SP on skills</Run>
                                                <Run> to gain permanent bonuses. Higher tier skills require unlocking earlier skills first.</Run>
                                            </TextBlock>
                                            <TextBlock TextWrapping="Wrap" FontSize="11" Foreground="{StaticResource TextDim}" Margin="0,5,0,0"
                                                       FontStyle="Italic">
                                                Skills are kept through prestige! Choose wisely.
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <TextBlock Text="SKILL POINTS: " FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource AccentGreen}"/>
                                        <TextBlock x:Name="SkillPointsDisplay" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource AccentGold}" Text="0"/>
                                        <TextBlock Text=" (Available / Total)" FontSize="11"
                                                   Foreground="{StaticResource TextDim}" VerticalAlignment="Bottom" Margin="5,0,0,1"/>
                                    </StackPanel>

                                    <!-- Researcher Branch -->
                                    <Border Background="#0f2818" BorderBrush="#00ff41" BorderThickness="1,1,1,0"
                                            CornerRadius="6,6,0,0" Padding="10,8" Margin="0,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="RESEARCHER" FontSize="14" FontWeight="Bold" Foreground="#00ff41"/>
                                            <TextBlock Text="Boosts your Evidence per Second (EPS). Great for passive income."
                                                       FontSize="10" Foreground="{StaticResource TextDim}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#081510" BorderBrush="#00ff41" BorderThickness="1,0,1,1"
                                            CornerRadius="0,0,6,6" Padding="5" Margin="0,0,0,15">
                                        <StackPanel x:Name="ResearcherSkillsPanel"/>
                                    </Border>

                                    <!-- Influencer Branch -->
                                    <Border Background="#2a2010" BorderBrush="#ffd700" BorderThickness="1,1,1,0"
                                            CornerRadius="6,6,0,0" Padding="10,8" Margin="0,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="INFLUENCER" FontSize="14" FontWeight="Bold" Foreground="#ffd700"/>
                                            <TextBlock Text="Increases Believers. More believers = more quests you can run."
                                                       FontSize="10" Foreground="{StaticResource TextDim}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#15120a" BorderBrush="#ffd700" BorderThickness="1,0,1,1"
                                            CornerRadius="0,0,6,6" Padding="5" Margin="0,0,0,15">
                                        <StackPanel x:Name="InfluencerSkillsPanel"/>
                                    </Border>

                                    <!-- Infiltrator Branch -->
                                    <Border Background="#2a1010" BorderBrush="#ff4444" BorderThickness="1,1,1,0"
                                            CornerRadius="6,6,0,0" Padding="10,8" Margin="0,0,0,0">
                                        <StackPanel>
                                            <TextBlock Text="INFILTRATOR" FontSize="14" FontWeight="Bold" Foreground="#ff4444"/>
                                            <TextBlock Text="Powers up your clicks. Best for active players who click a lot."
                                                       FontSize="10" Foreground="{StaticResource TextDim}" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </Border>
                                    <Border Background="#150a0a" BorderBrush="#ff4444" BorderThickness="1,0,1,1"
                                            CornerRadius="0,0,6,6" Padding="5" Margin="0,0,0,0">
                                        <StackPanel x:Name="InfiltratorSkillsPanel"/>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </TabItem>

                    <!-- Daily Challenges Tab -->
                    <TabItem x:Name="DailyTab" Header="Daily">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="DAILY CHALLENGES" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGreen}" Margin="0,0,0,5"/>
                                    <TextBlock Text="Complete challenges to earn Tinfoil!" FontSize="11"
                                               Foreground="{StaticResource TextDim}" Margin="0,0,0,15"/>
                                    <StackPanel x:Name="DailyChallengesPanel"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </TabItem>

                    <!-- Prestige Tab -->
                    <TabItem x:Name="IlluminatiTab" Header="Illuminati">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel>
                                    <!-- Prestige Button -->
                                    <Border x:Name="PrestigeSection" Background="#2a1a4e" BorderBrush="#9933ff"
                                            BorderThickness="2" CornerRadius="8" Margin="0,0,0,15" Padding="15">
                                        <StackPanel>
                                            <TextBlock Text="JOIN THE ILLUMINATI" FontSize="18" FontWeight="Bold"
                                                       Foreground="#9933ff" HorizontalAlignment="Center"/>
                                            <TextBlock x:Name="PrestigeInfoText" TextWrapping="Wrap"
                                                       FontSize="11" Foreground="{StaticResource TextDim}"
                                                       HorizontalAlignment="Center" Margin="0,5,0,10"/>
                                            <Button x:Name="PrestigeButton" Click="PrestigeButton_Click"
                                                    Content="ASCEND" FontWeight="Bold" FontSize="14"
                                                    Background="#9933ff" Foreground="White" Padding="20,8"
                                                    HorizontalAlignment="Center" Cursor="Hand" IsEnabled="False"/>
                                        </StackPanel>
                                    </Border>

                                    <TextBlock Text="ILLUMINATI UPGRADES" FontSize="14" FontWeight="Bold"
                                               Foreground="#9933ff" Margin="0,0,0,10"/>
                                    <TextBlock x:Name="IlluminatiTokensText" FontSize="11"
                                               Foreground="{StaticResource TextDim}" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="IlluminatiUpgradesPanel"/>

                                    <Separator Background="#333" Margin="0,15,0,15"/>

                                    <TextBlock Text="PURCHASED UPGRADES" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGold}" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="PurchasedIlluminatiPanel"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </TabItem>
                </TabControl>

                <!-- Notification Log -->
                <Border Grid.Row="1" Background="{StaticResource PanelBackground}"
                        CornerRadius="8" Margin="0,5,0,0" MaxHeight="120">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="NOTIFICATIONS" FontSize="11" FontWeight="Bold"
                                   Foreground="{StaticResource TextDim}" Margin="10,5,10,0"/>
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,5,10,10">
                            <StackPanel x:Name="NotificationLogPanel"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Right Panel: Stats -->
            <Border Grid.Column="2" Background="{StaticResource PanelBackground}"
                    Margin="10" CornerRadius="8">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="STATISTICS"
                                   FontSize="16" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGreen}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Total Evidence" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="TotalEvidenceDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="14"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Total Clicks" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="TotalClicksDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="14"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Click Power (base Ã— mult + EPS bonus)" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="ClickPowerDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Evidence/sec (base Ã— mult = total)" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="EpsBreakdownDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="12"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Play Time" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="PlayTimeDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="14"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Achievements" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="AchievementCountDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="14"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Conspiracies Proven" Foreground="{StaticResource TextDim}" FontSize="11"/>
                        <TextBlock x:Name="ConspiracyCountDisplay"
                                   Foreground="{StaticResource TextLight}" FontSize="14"
                                   Margin="0,0,0,20"/>

                        <Separator Background="#333" Margin="0,0,0,15"/>

                        <TextBlock Text="GENERATORS OWNED"
                                   FontSize="14" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGold}"
                                   Margin="0,0,0,10"/>
                        <StackPanel x:Name="OwnedGeneratorsPanel"/>

                        <!-- Prestige Teaser -->
                        <Border x:Name="PrestigeTeaser" Visibility="Collapsed"
                                Background="#2a1a4e" BorderBrush="#9933ff" BorderThickness="2"
                                CornerRadius="8" Margin="0,20,0,0" Padding="10">
                            <StackPanel>
                                <TextBlock Text="THE ILLUMINATI AWAITS..." FontSize="14" FontWeight="Bold"
                                           Foreground="#9933ff" HorizontalAlignment="Center"/>
                                <TextBlock Text="Reach 1 trillion evidence to ascend"
                                           FontSize="10" Foreground="{StaticResource TextDim}"
                                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- News Ticker -->
            <Border Grid.Row="1" Grid.ColumnSpan="3" Background="#0a0f1a"
                    Margin="10,0,10,10" Padding="8,4" CornerRadius="4">
                <Grid ClipToBounds="True">
                    <TextBlock Text="ðŸ“º BREAKING:" FontWeight="Bold" Foreground="{StaticResource AccentGold}"
                               VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <Canvas x:Name="NewsTickerCanvas" Margin="100,0,0,0" ClipToBounds="True">
                        <TextBlock x:Name="NewsTickerText" Foreground="{StaticResource TextLight}" FontSize="12"
                                   Canvas.Top="2"/>
                    </Canvas>
                </Grid>
            </Border>
        </Grid>

        <!-- Minigame Overlay -->
        <Border x:Name="MinigameOverlay" Visibility="Collapsed" Panel.ZIndex="500"
                Background="#CC1a1a2e">
            <Grid>
                <Border Background="#16213e" BorderBrush="{StaticResource AccentGreen}"
                        BorderThickness="3" CornerRadius="12" Padding="20"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        MinWidth="400" MinHeight="350">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Title -->
                        <StackPanel Grid.Row="0">
                            <TextBlock x:Name="MinigameTitle" Text="MINIGAME"
                                       FontSize="24" FontWeight="Bold"
                                       Foreground="{StaticResource AccentGreen}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="MinigameInstructions" Text="Click to begin!"
                                       FontSize="12" Foreground="{StaticResource TextDim}"
                                       HorizontalAlignment="Center" Margin="0,5,0,10"/>
                        </StackPanel>

                        <!-- Game Area -->
                        <Border Grid.Row="1" Background="#0f1a2e" CornerRadius="8" Margin="0,10">
                            <Canvas x:Name="MinigameCanvas" Width="350" Height="200"
                                    ClipToBounds="True"/>
                        </Border>

                        <!-- Status/Timer -->
                        <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                            <TextBlock x:Name="MinigameStatus" Text="Ready!"
                                       FontSize="18" FontWeight="Bold"
                                       Foreground="{StaticResource AccentGold}"
                                       HorizontalAlignment="Center"/>
                            <Button x:Name="MinigameStartButton" Content="START GAME"
                                    Click="MinigameStart_Click" Margin="0,10,0,0"
                                    Padding="20,8" Background="{StaticResource AccentGreen}"
                                    Foreground="#1a1a2e" FontWeight="Bold" Cursor="Hand"/>
                            <Button x:Name="MinigameCloseButton" Content="Close"
                                    Click="MinigameClose_Click" Margin="0,5,0,0"
                                    Padding="15,5" Background="Transparent"
                                    Foreground="{StaticResource TextDim}" Cursor="Hand"
                                    BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Ascend Confirmation Overlay -->
        <Border x:Name="AscendOverlay" Visibility="Collapsed" Panel.ZIndex="600"
                Background="#DD1a1a2e">
            <Grid>
                <Border Background="#16213e" BorderBrush="#9933ff"
                        BorderThickness="3" CornerRadius="12" Padding="30"
                        HorizontalAlignment="Center" VerticalAlignment="Center"
                        MinWidth="450">
                    <Border.Effect>
                        <DropShadowEffect Color="#9933ff" BlurRadius="30" ShadowDepth="0" Opacity="0.5"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Title -->
                        <TextBlock Text="JOIN THE ILLUMINATI?" FontSize="26" FontWeight="Bold"
                                   Foreground="#9933ff" HorizontalAlignment="Center"/>
                        <TextBlock Text="Are you ready to ascend?" FontSize="14"
                                   Foreground="{StaticResource TextDim}"
                                   HorizontalAlignment="Center" Margin="0,5,0,20"/>

                        <!-- Token Reward -->
                        <Border Background="#0f1a2e" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="You will receive:" FontSize="12"
                                           Foreground="{StaticResource TextDim}" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="AscendTokensText" Text="0 Illuminati Tokens"
                                           FontSize="24" FontWeight="Bold"
                                           Foreground="{StaticResource AccentGold}"
                                           HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- What you lose -->
                        <Border Background="#2a1a1a" CornerRadius="8" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="YOU WILL LOSE:" FontSize="12" FontWeight="Bold"
                                           Foreground="#ff6666" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="â€¢ All Evidence" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text="â€¢ All Generators" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text="â€¢ All Upgrades" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text="â€¢ All Tinfoil &amp; Tinfoil Upgrades" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text="â€¢ All Believers" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text="â€¢ All Conspiracies" Foreground="#ff9999" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- What you keep -->
                        <Border Background="#1a2a1a" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="YOU WILL KEEP:" FontSize="12" FontWeight="Bold"
                                           Foreground="#66ff66" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="â€¢ Illuminati Tokens &amp; Upgrades" Foreground="#99ff99" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text="â€¢ Skill Tree Progress" Foreground="#99ff99" FontSize="11" HorizontalAlignment="Center"/>
                                <TextBlock Text="â€¢ Achievements" Foreground="#99ff99" FontSize="11" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Buttons -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="0" Content="ASCEND" Click="AscendConfirm_Click"
                                    Padding="20,12" Background="#9933ff" Foreground="White"
                                    FontWeight="Bold" FontSize="14" Cursor="Hand"/>
                            <Button Grid.Column="2" Content="Cancel" Click="AscendCancel_Click"
                                    Padding="20,12" Background="#333344" Foreground="{StaticResource TextDim}"
                                    FontWeight="Bold" FontSize="14" Cursor="Hand"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Toast Notification Overlay -->
        <Border x:Name="ToastNotification"
                HorizontalAlignment="Center" VerticalAlignment="Top"
                Margin="0,20,0,0" Padding="20,10"
                Background="#0f3460" BorderBrush="{StaticResource AccentGold}"
                BorderThickness="2" CornerRadius="8"
                Visibility="Collapsed" Panel.ZIndex="1000">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="ToastIcon" Text="!" FontSize="18" FontWeight="Bold"
                           Foreground="{StaticResource AccentGold}" Margin="0,0,10,0"/>
                <TextBlock x:Name="ToastMessage" Text="" FontSize="14"
                           Foreground="{StaticResource TextLight}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
