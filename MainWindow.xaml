<Window x:Class="ConspiracyClicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conspiracy Clicker - The Truth Is Out There"
        Height="900" Width="1400"
        MinHeight="700" MinWidth="1100"
        Background="#1a1a2e"
        Icon="app.ico"
        Closing="Window_Closing">

    <Window.Resources>
        <SolidColorBrush x:Key="BackgroundDark" Color="#1a1a2e"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#16213e"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#00ff41"/>
        <SolidColorBrush x:Key="AccentGold" Color="#ffd700"/>
        <SolidColorBrush x:Key="TextLight" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="TextDim" Color="#888888"/>

        <!-- Dark themed Tooltip style with transparency -->
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="#E61a1a2e"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#C800ff41"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.6"/>
                            </Border.Effect>
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Global ToolTipService settings -->
        <Style TargetType="FrameworkElement">
            <Setter Property="ToolTipService.ShowDuration" Value="10000"/>
            <Setter Property="ToolTipService.InitialShowDelay" Value="400"/>
            <Setter Property="ToolTipService.BetweenShowDelay" Value="100"/>
        </Style>

        <!-- Custom ScrollBar style to match UI -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#0a1628"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="#0a1628">
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#00ff41" CornerRadius="4" Margin="2" Opacity="0.6">
                                                    <Border.Triggers>
                                                        <EventTrigger RoutedEvent="MouseEnter">
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                        <EventTrigger RoutedEvent="MouseLeave">
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity" To="0.6" Duration="0:0:0.15"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </EventTrigger>
                                                    </Border.Triggers>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="Orientation" Value="Horizontal">
                    <Setter Property="Width" Value="Auto"/>
                    <Setter Property="Height" Value="10"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Ambient Glow Pulse -->
        <Storyboard x:Key="AmbientGlowAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="EyeAmbientGlow"
                             Storyboard.TargetProperty="Opacity"
                             From="0.15" To="0.35" Duration="0:0:3"
                             AutoReverse="True">
                <DoubleAnimation.EasingFunction>
                    <SineEase EasingMode="EaseInOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Base button style with hover effects -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#00ff41"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1a5a7e"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#66ff99"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Margin" Value="-1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0a3a4e"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#1a1a2e"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#333344"/>
                                <Setter Property="Foreground" Value="#707080"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="GeneratorButton" TargetType="Button">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="BorderBrush" Value="#00ff41"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="5,5,5,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1a5a7e"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#66ff99"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                <Setter TargetName="border" Property="Margin" Value="-1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#0a3a4e"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#1a1a2e"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#333344"/>
                                <Setter Property="Foreground" Value="#707080"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Dark themed ComboBox style -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="32"/>
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" CornerRadius="4"
                        Background="#0f1a2e" BorderBrush="#333366" BorderThickness="1"/>
                <Border Grid.Column="0" CornerRadius="4,0,0,4" Margin="1"
                        Background="#0f1a2e"/>
                <Path x:Name="Arrow" Grid.Column="1" Fill="#00ff41"
                      HorizontalAlignment="Center" VerticalAlignment="Center"
                      Data="M 0 0 L 6 6 L 12 0 Z"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="BorderBrush" Value="#00ff41"/>
                    <Setter TargetName="Border" Property="Background" Value="#1a2a4e"/>
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="Border" Property="BorderBrush" Value="#00ff41"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="Background" Value="#0f1a2e"/>
            <Setter Property="BorderBrush" Value="#333366"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                          Template="{StaticResource ComboBoxToggleButton}"
                                          Focusable="False" ClickMode="Press"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"/>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="14,6,32,6" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid x:Name="DropDown" SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}" MaxHeight="300">
                                    <Border x:Name="DropDownBorder" Background="#0f1a2e"
                                            BorderBrush="#00ff41" BorderThickness="1" CornerRadius="4">
                                        <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkComboBoxItem" TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#e0e0e0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}" CornerRadius="3">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1a4a3e"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#0a3a2e"/>
                                <Setter Property="Foreground" Value="#00ff41"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1a4a3e"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Layout -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="700"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Click Area -->
            <Border Grid.Column="0" Background="{StaticResource PanelBackground}"
                    Margin="10" CornerRadius="8">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="15,15,15,5">
                        <TextBlock x:Name="EvidenceDisplay"
                                   FontSize="48" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGreen}"
                                   Text="0 Evidence">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="#00ff41" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock x:Name="EpsDisplay"
                                   FontSize="24"
                                   Foreground="{StaticResource TextDim}"
                                   Text="0/sec"/>
                        <!-- Hidden rank stubs (disabled feature) -->
                        <StackPanel x:Name="RankDisplayPanel" Visibility="Collapsed">
                            <TextBlock x:Name="RankSocietyDisplay"/>
                            <TextBlock x:Name="RankTitleDisplay"/>
                        </StackPanel>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="15,0,15,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Tinfoil" FontSize="18" Foreground="{StaticResource TextDim}"/>
                            <TextBlock x:Name="TinfoilDisplay" FontSize="27" FontWeight="Bold"
                                       Foreground="#C0C0C0" Text="0"/>
                        </StackPanel>
                        <StackPanel x:Name="TokensPanel" Grid.Column="1" Visibility="Collapsed">
                            <TextBlock Text="Tokens" FontSize="18" Foreground="{StaticResource TextDim}"/>
                            <TextBlock x:Name="IlluminatiTokenDisplay" FontSize="27" FontWeight="Bold"
                                       Foreground="#9933ff" Text="0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Believers" FontSize="18" Foreground="{StaticResource TextDim}"/>
                            <TextBlock x:Name="BelieversDisplay" FontSize="27" FontWeight="Bold"
                                       Foreground="{StaticResource AccentGold}" Text="0"/>
                        </StackPanel>
                        <StackPanel Grid.Column="3">
                            <TextBlock Text="Available" FontSize="18" Foreground="{StaticResource TextDim}"/>
                            <TextBlock x:Name="AvailableBelieversDisplay" FontSize="27" FontWeight="Bold"
                                       Foreground="{StaticResource AccentGold}" Text="0"/>
                        </StackPanel>
                    </Grid>

                    <!-- Sound Toggle, Fullscreen, and Menu -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="15,0,15,5">
                        <Button x:Name="SoundToggleButton" Click="SoundToggle_Click"
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                ToolTip="Toggle Sound" Margin="0,0,10,0">
                            <Image x:Name="SoundToggleIcon" Source="{DynamicResource Icon_sound_on}"
                                   Width="28" Height="28" Stretch="Uniform"/>
                        </Button>
                        <Button x:Name="FullscreenToggleButton" Click="FullscreenToggle_Click"
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                ToolTip="Toggle Fullscreen (F11)" Margin="0,0,10,0">
                            <Image x:Name="FullscreenToggleIcon" Source="{DynamicResource Icon_fullscreen}"
                                   Width="28" Height="28" Stretch="Uniform"/>
                        </Button>
                        <Button x:Name="ZenModeToggleButton" Click="ZenModeToggle_Click"
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                ToolTip="Zen Mode - Disable random events" Margin="0,0,10,0">
                            <Image x:Name="ZenModeToggleIcon" Source="{DynamicResource Icon_zen_off}"
                                   Width="28" Height="28" Stretch="Uniform"/>
                        </Button>
                        <Button Click="ReturnToMenu_Click"
                                Background="Transparent" BorderThickness="0" Cursor="Hand"
                                ToolTip="Return to Main Menu">
                            <Image Source="{DynamicResource Icon_menu}" Width="28" Height="28" Stretch="Uniform"/>
                        </Button>
                    </StackPanel>

                    <!-- Click Area -->
                    <Grid Grid.Row="2">
                        <!-- Ambient background canvas (lowest layer) -->
                        <Canvas x:Name="AmbientCanvas" ClipToBounds="False" IsHitTestVisible="False"/>

                        <!-- Orbit canvas for generator icons -->
                        <Canvas x:Name="OrbitCanvas" ClipToBounds="False" IsHitTestVisible="False"
                                HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <!-- The Eye Button -->
                        <Grid x:Name="EyeContainer" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <!-- Ambient outer glow -->
                            <Ellipse x:Name="EyeAmbientGlow" Width="200" Height="200"
                                     Opacity="0.2" IsHitTestVisible="False">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#00ff41" Offset="0.2"/>
                                        <GradientStop Color="Transparent" Offset="1.0"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <!-- Pyramid (evolves with conspiracies) - larger background -->
                            <Image x:Name="PyramidImage"
                                   Source="{DynamicResource Icon_pyramid_level_0}"
                                   Width="180" Height="180"
                                   Stretch="Uniform"
                                   RenderTransformOrigin="0.5,0.5"
                                   IsHitTestVisible="False">
                                <Image.OpacityMask>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#FFFFFFFF" Offset="0"/>
                                        <GradientStop Color="#FFFFFFFF" Offset="0.6"/>
                                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                                    </RadialGradientBrush>
                                </Image.OpacityMask>
                                <Image.Effect>
                                    <DropShadowEffect x:Name="PyramidGlow" Color="#00ff41" BlurRadius="15" ShadowDepth="0" Opacity="0.4"/>
                                </Image.Effect>
                                <Image.RenderTransform>
                                    <ScaleTransform x:Name="PyramidScale" ScaleX="1" ScaleY="1"/>
                                </Image.RenderTransform>
                            </Image>
                            <!-- The Eye (this part grows with combo) - smaller, positioned in upper portion -->
                            <Image x:Name="EyeImage"
                                   Source="{DynamicResource Icon_eye_only}"
                                   Width="50" Height="50"
                                   Margin="0,-30,0,0"
                                   Stretch="Uniform"
                                   RenderTransformOrigin="0.5,0.5"
                                   IsHitTestVisible="False">
                                <Image.Effect>
                                    <DropShadowEffect x:Name="EyeGlow" Color="#00ff41" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                                </Image.Effect>
                                <Image.RenderTransform>
                                    <ScaleTransform x:Name="EyeScale" ScaleX="1" ScaleY="1"/>
                                </Image.RenderTransform>
                            </Image>
                            <!-- Clickable button overlay -->
                            <Button x:Name="ClickButton" Width="180" Height="180"
                                    Click="ClickButton_Click" Cursor="Hand"
                                    Background="Transparent" BorderThickness="0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent"/>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>

                        <!-- Canvas for animations (on top) -->
                        <Canvas x:Name="ClickCanvas" ClipToBounds="False" IsHitTestVisible="False"/>

                        <!-- Canvas for interactive elements (lucky drops, debunkers) -->
                        <Canvas x:Name="InteractiveCanvas" ClipToBounds="False"/>
                    </Grid>

                    <!-- Combo Label -->
                    <StackPanel Grid.Row="3" Margin="15,5,15,5" Panel.ZIndex="100" HorizontalAlignment="Center">
                        <TextBlock x:Name="ComboLabel" Text="" FontSize="21" FontWeight="Bold"
                                   Foreground="{StaticResource AccentGold}" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock x:Name="FlavorTextDisplay" Grid.Row="4"
                               Margin="15,5,15,15" TextWrapping="Wrap"
                               FontStyle="Italic" FontSize="20"
                               Foreground="{StaticResource TextDim}"
                               HorizontalAlignment="Center"
                               Text="Click to gather evidence..."/>
                </Grid>
            </Border>

            <!-- Middle Panel: Tabbed Content -->
            <Grid Grid.Column="1" Margin="5,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TabControl x:Name="MainTabControl" Grid.Row="0" Background="Transparent" BorderThickness="0"
                            Padding="0">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#666666"/>
                            <Setter Property="FontSize" Value="13"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Grid Margin="0,0,4,0">
                                            <Border x:Name="Border" Background="#0a2040"
                                                    CornerRadius="4,4,0,0" Padding="12,8"
                                                    BorderThickness="0">
                                                <ContentPresenter x:Name="Content" ContentSource="Header"
                                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <!-- Separate border overlay for clean rendering -->
                                            <Border x:Name="BorderOverlay"
                                                    BorderBrush="#1a3a5c" BorderThickness="1"
                                                    CornerRadius="4,4,0,0" IsHitTestVisible="False"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#16213e"/>
                                                <Setter TargetName="Border" Property="Padding" Value="12,10,12,9"/>
                                                <Setter TargetName="BorderOverlay" Property="BorderBrush" Value="#00ff41"/>
                                                <Setter TargetName="BorderOverlay" Property="BorderThickness" Value="2"/>
                                                <Setter Property="Foreground" Value="#00ff41"/>
                                                <Setter Property="Panel.ZIndex" Value="10"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#12304a"/>
                                                <Setter Property="Foreground" Value="#aaaaaa"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <!-- Generators Tab -->
                    <TabItem x:Name="GeneratorsTab" Header="Generators" ToolTip="Buy generators to produce evidence automatically">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,10,10,0">
                                    <TextBlock Text="Buy Mode: " Foreground="{StaticResource TextDim}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="21"/>
                                    <Button x:Name="BuyMode1" Content="1x" Click="BuyMode_Click" Tag="1"
                                            ToolTip="Buy 1 at a time"
                                            Padding="18,9" Margin="3" FontSize="21" Background="#0f3460" Foreground="{StaticResource AccentGreen}"
                                            BorderBrush="{StaticResource AccentGreen}" BorderThickness="1"/>
                                    <Button x:Name="BuyMode10" Content="10x" Click="BuyMode_Click" Tag="10"
                                            ToolTip="Buy 10 at a time"
                                            Padding="18,9" Margin="3" FontSize="21" Background="#0f3460" Foreground="{StaticResource TextDim}"
                                            BorderBrush="{StaticResource TextDim}" BorderThickness="1"/>
                                    <Button x:Name="BuyMode100" Content="100x" Click="BuyMode_Click" Tag="100"
                                            ToolTip="Buy 100 at a time"
                                            Padding="18,9" Margin="3" FontSize="21" Background="#0f3460" Foreground="{StaticResource TextDim}"
                                            BorderBrush="{StaticResource TextDim}" BorderThickness="1"/>
                                    <Button x:Name="BuyModeMax" Content="MAX" Click="BuyMode_Click" Tag="max"
                                            ToolTip="Buy as many as you can afford"
                                            Padding="18,9" Margin="3" FontSize="21" Background="#0f3460" Foreground="{StaticResource TextDim}"
                                            BorderBrush="{StaticResource TextDim}" BorderThickness="1"/>
                                </StackPanel>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
                                    <StackPanel x:Name="GeneratorPanel"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </TabItem>

                    <!-- Upgrades Tab -->
                    <TabItem x:Name="UpgradesTab" Header="Upgrades" ToolTip="Purchase upgrades to boost your click power and production">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="AVAILABLE UPGRADES" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGreen}" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="UpgradePanel"/>

                                    <Separator Background="#333" Margin="0,10,0,10"/>

                                    <TextBlock Text="PURCHASED UPGRADES" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGold}" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="PurchasedUpgradesPanel"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </TabItem>

                    <!-- Tinfoil Shop Tab -->
                    <TabItem x:Name="TinfoilShopTab" Header="Tinfoil Shop" ToolTip="Spend Tinfoil on powerful permanent upgrades">
                        <Border Background="{StaticResource PanelBackground}" CornerRadius="0,8,8,8">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                                <StackPanel>
                                    <TextBlock Text="PURCHASED UPGRADES" FontSize="14" FontWeight="Bold"
                                               Foreground="{StaticResource AccentGold}" Margin="0,0,0,10"/>
                                    <StackPanel x:Name="PurchasedTinfoilPanel"/>

                                    <Separator Background="#333" Margin="0,10,0,10"/>

